<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="mainPane" prefHeight="700.0" prefWidth="1000.0" styleClass="main-pane" stylesheets="@../style/main-view.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.banktron.controller.MainViewController">
   <children>
      <Pane fx:id="profilePane" layoutY="6.0" prefHeight="200.0" prefWidth="400.0" styleClass="other-panes" stylesheets="@../style/main-view.css" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="nameLabel" layoutX="24.0" layoutY="38.0" styleClass="all-labels" stylesheets="@../style/main-view.css" text="Your name">
               <font>
                  <Font name="Arial Black" size="13.0" />
               </font>
            </Label>
            <Label fx:id="balanceLabel" layoutX="24.0" layoutY="131.0" styleClass="all-labels" stylesheets="@../style/main-view.css" text="Balance">
               <font>
                  <Font name="Arial Black" size="13.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <Pane fx:id="transferPane" layoutY="350.0" prefHeight="350.0" prefWidth="651.0" styleClass="other-panes" stylesheets="@../style/main-view.css">
         <children>
            <Label layoutX="22.0" layoutY="37.0" styleClass="all-labels" stylesheets="@../style/main-view.css" text="Please enter the amount you want to transfer">
               <font>
                  <Font name="Arial Black" size="13.0" />
               </font>
            </Label>
            <TextField layoutX="405.0" layoutY="35.0" promptText="Amount" styleClass="all-fields" stylesheets="@../style/main-view.css">
               <font>
                  <Font name="Arial Black" size="13.0" />
               </font>
            </TextField>
            <TextArea fx:id="descrpitionArea" layoutX="-1.0" layoutY="143.0" prefHeight="207.0" prefWidth="304.0" promptText="Enter your description here" styleClass="text-area" stylesheets="@../style/main-view.css">
               <font>
                  <Font name="Arial Black" size="13.0" />
               </font>
            </TextArea>
            <Button fx:id="transferButton" layoutX="425.0" layoutY="175.0" mnemonicParsing="false" onAction="#transferMoney" styleClass="all-button" stylesheets="@../style/main-view.css" text="Transfer">
               <font>
                  <Font name="Arial Black" size="13.0" />
               </font>
            </Button>
         </children>
      </Pane>
      <Pane fx:id="processPane" layoutX="651.0" prefHeight="700.0" prefWidth="350.0" styleClass="other-panes" stylesheets="@../style/main-view.css">
         <children>
            <Label layoutX="14.0" layoutY="106.0" styleClass="all-labels" stylesheets="@../style/main-view.css" text="Enter the amount you want to deposit/withdraw">
               <font>
                  <Font name="Arial Black" size="13.0" />
               </font>
            </Label>
            <TextField fx:id="amountField" layoutX="20.0" layoutY="177.0" prefHeight="28.0" prefWidth="310.0" promptText="Amount" styleClass="all-fields" stylesheets="@../style/main-view.css">
               <font>
                  <Font name="Arial Black" size="13.0" />
               </font>
            </TextField>
            <Button fx:id="depositButton" layoutX="14.0" layoutY="284.0" mnemonicParsing="false" onAction="#depositMoney" styleClass="all-button" stylesheets="@../style/main-view.css" text="Deposit">
               <font>
                  <Font name="Arial Black" size="13.0" />
               </font>
            </Button>
            <Button layoutX="172.0" layoutY="284.0" mnemonicParsing="false" onAction="#withdrawMoney" styleClass="all-button" stylesheets="@../style/main-view.css" text="Withdraw">
               <font>
                  <Font name="Arial Black" size="13.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </children>
</AnchorPane>
